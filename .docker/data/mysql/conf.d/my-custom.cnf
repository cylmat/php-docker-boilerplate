###
# Dump your database to host:
#    docker exec mysql bash -c 'exec mysqldump --all-databases -uroot -p"$MYSQL_ROOT_PASSWORD"' > /host/todata.sql
# Restore
#    docker exec -i mysql bash -c 'exec mysql -uroot -p"$MYSQL_ROOT_PASSWORD"' < /host/fromdata.sql
###

[client]
# user=user
# password=pass
# # #host=localhost
# host = 0.0.0.0

[mysqld]
# port            = 3306
# socket          = /var/run/mysqld/mysqld.sock

# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
#bind-address            = localhost
#bind-address	= 0.0.0.0 #127.0.0.1
bind-address = *


